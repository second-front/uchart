{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "file://./values.schema.json",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "nameOverride": {
          "type": [
            "string",
            "null"
          ]
        },
        "fullnameOverride": {
          "type": [
            "string",
            "null"
          ]
        },
        "customerName": {
          "type": "string"
        },
        "applicationName": {
          "type": "string"
        },
        "complianceLevel": {
          "type": "string"
        },
        "environment": {
          "type": "string"
        },
        "imageRegistry": {
          "type": [
            "string",
            "null"
          ]
        },
        "labels": {
          "$ref": "schemas/metadata.json#/labels"
        },
        "annotations": {
          "$ref": "schemas/metadata.json#/annotations"
        }
      },
      "required": [
        "customerName",
        "applicationName",
        "complianceLevel",
        "environment"
      ]
    },
    "defaultPodOptions": {
      "$ref": "schemas/pod.json#/options"
    },
    "workloads": {
      "additionalProperties": {
        "$ref": "schemas/workload.json#/instance"
      }
    },
    "serviceAccounts": {
      "$ref": "schemas/serviceAccount.json#/settings"
    },
    "configMaps": {
      "additionalProperties": {
        "$ref": "schemas/configMap.json#/instance"
      }
    },
    "secrets": {
      "additionalProperties": {
        "$ref": "schemas/secret.json#/instance"
      }
    },
    "services": {
      "additionalProperties": {
        "$ref": "schemas/service.json#/instance"
      }
    },
    "virtualServices": {
      "additionalProperties": {
        "$ref": "schemas/virtualService.json#/instance"
      }
    },
    "networkPolicies": {
      "additionalProperties": {
        "$ref": "schemas/networkPolicy.json#/instance"
      }
    },
    "volumes": {
      "additionalProperties": {
        "$ref": "schemas/volume.json#/instance"
      }
    },
    "extraManifests": {
      "additionalProperties": {
        "$ref": "schemas/extraManifest.json#/instance"
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "file://./values.schema.json",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "enum": [
        "1.0",
        "2.0"
      ]
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "schema": {
            "const": "2.0"
          }
        }
      },
      "then": {
        "$ref": "new-values.schema.json"
      }
    },
    {
      "if": {
        "properties": {
          "schema": {
            "const": "1.0"
          }
        }
      },
      "then": {
        "$ref": "old-values.schema.json"
      }
    }
  ]
}
{
    "rules": {
        "if": {
          "properties": {
            "type": { "const": "daemonSet" }
          },
          "required": [ "type" ]
        },
        "then": {
          "allOf": [
            {
              "not": {
                "anyOf": [
                  { "required": [ "autoscaling" ] },
                  { "required": [ "strategy" ] },
                  { "required": [ "rollingUpdate" ] }
                ]
              }
            }
          ]
        },
        "else": {
          "not": {
            "anyOf": [
              { "required": [ "daemonSet" ] }
            ]
          }
        }
    }
}